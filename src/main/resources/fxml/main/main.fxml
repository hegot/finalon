<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx/8.0.121">
    <top>
        <HBox spacing="20" styleClass="header">
            <ImageView>
                <image>
                    <Image url="@img/statistics.png"/>
                </image>
            </ImageView>
            <Label styleClass="headerText" text="Financial Statement Analysis Application" textAlignment="LEFT"/>
        </HBox>
    </top>
    <center>
        <TilePane prefHeight="400.0" prefWidth="600.0" vgap="10" hgap="10" style="-fx-padding:10px">
            <VBox styleClass="content-block">
                <Button onAction="#addCompanyAction" styleClass="tile-btn" text="Add Company">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@img/company.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <VBox styleClass="content-block">
                <Button onAction="#settingsAction" styleClass="tile-btn" text=" Settings">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@img/settings.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <VBox styleClass="content-block">
                <Button onAction="#helpAction" styleClass="tile-btn" text=" Help">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@img/help.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <VBox styleClass="content-block">
                <Button onAction="#templatesAction" styleClass="tile-btn" text=" Your Templates">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@img/template.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <VBox styleClass="content-block">
                <Button onAction="#formulaAction" styleClass="tile-btn" text="Formula&#10;Customization">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@img/formula.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <VBox styleClass="content-block">
                <Button onAction="#reportsAction" styleClass="tile-btn" text="Your Saved&#10;Reports">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@img/analytics.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

        </TilePane>
    </center>
    <bottom>
        <VBox styleClass="footer">
            <Text text="Â© Finstaton.com 2020 all rights reserved"/>
        </VBox>
    </bottom>
</fx:root>
